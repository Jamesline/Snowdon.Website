@page "/geco"
@using BlazorInputFile
@using System.IO
@using Snowdon.Website
@using Snowdon.Website.Components

@inject Services.AppDataService AppDataService

<h3>Geco</h3>

<p><FileReader /></p>
<p>@AppDataService.MasterStatus </p>
@if (AppDataService.FileLoaded == true)
{

    <p><GecoDisplay /></p>
}

@code {
    protected override void OnInitialized()
    {
        AppDataService.OnChange += StateHasChanged;
    }
}
